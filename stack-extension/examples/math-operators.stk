// Função para demonstrar expressões complexas
funcao expressoesComplexas() {
    imprimir("\n=== Expressões Complexas ===")
    
    variavel a = 5
    variavel b = 3
    variavel c = 2
    
    // Expressão: (a + b) * c - (a / b)
    variavel resultado1 = (a mais b) vezes c menos (a dividido b)
    imprimir("(a mais b) vezes c menos (a dividido b) = " + resultado1)
    
    // Expressão: a^b + c^2
    variavel resultado2 = a elevado b mais c elevado 2
    imprimir("a elevado b mais c elevado 2 = " + resultado2)
    
    // Expressão: (a > b) && (b < c)
    variavel resultado3 = (a maior b) e (b menor c)
    imprimir("(a maior b) e (b menor c) = " + resultado3)
    
    // Expressão: !(a == b) || (c != 0)
    variavel resultado4 = nao (a igual b) ou (c diferente 0)
    imprimir("nao (a igual b) ou (c diferente 0) = " + resultado4)
}

