// Função em português
funcao calcularMedia(numeros) {
    se (numeros.length igual 0) {
        retornar 0
    }
    
    variavel soma = 0
    para (variavel i = 0; i menor numeros.length; i = i mais 1) {
        soma = soma mais numeros[i]
    }
    
    retornar soma dividido numeros.length
}

// Usar a função
variavel notas = [8.5, 7.0, 9.0, 6.5, 8.0]
variavel media = calcularMedia(notas)

imprimir("\n📊 Cálculo de média:")
imprimir("Notas: " + notas.join(", "))
imprimir("Média: " + media)

// Função híbrida (português + inglês)
function calculateSum(numbers) {
    if (numbers.length === 0) {
        return 0
    }
    
    let sum = 0
    for (let i = 0; i < numbers.length; i++) {
        sum = sum + numbers[i]
    }
    
    return sum
}

// Usar função em inglês
variavel soma_total = calculateSum(notas)
imprimir("Soma total: " + soma_total)

